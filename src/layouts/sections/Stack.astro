---
import "../styles/sections/stack-styles.css";
import stackData from "../../lib/data/stack-data.json";
---

<hr class="styled-hr" />
<p class="stack-label">Stack</p>

<section class="stack">
  <div class="container">
    {
      stackData.sections.map((section) => (
        <div class="stack-column">
          <h4>{section.title}</h4>
          <ul>
            {section.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
